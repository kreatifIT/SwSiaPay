            <label>Verwende die Sandbox-Daten (Testmodus)</label>
        </input-field>
        <input-field type="text">
            <name>sandboxShopId</name>
            <label>SHOP-ID / MID:</label>
        </input-field>
        <input-field type="text">
            <name>sandboxMacKeyRedirect</name>
            <label>MAC_KEY_REDIRECT / Chiave Avvio:</label>
        </input-field>
        <input-field type="text">
            <name>sandboxApiResultKey</name>
            <label>API_RESULT_KEY / Chiave Esito API:</label>
        </input-field>
    </card>
